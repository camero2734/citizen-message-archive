---
import { Image } from 'astro:assets';
import { images } from '../helpers/images';
import Text from './Text.astro';

export interface Props {
	text: string;
	imageName: string;
	collapsible?: boolean;
}

const { text, imageName, collapsible } = Astro.props;

// TODO
const image = images[`../images/${imageName}.png`] || images[`../images/${imageName}.jpg`] || images[`../images/001.jpg`];
if (!image) {
	throw new Error(`Image not found for ${imageName}`);
}

const imageModule = (await image()).default;

---

{
	collapsible 
	?
	<li class={`link-card collapsible${!text ? " incomplete" : ""}`} id={imageName}>
		<details class="link-card-details">
			<summary>
				<slot name="header" />
				<slot name="subheader" />
			</summary>

			<figure class="image-container">
				<Image class="image" src={imageModule} alt={text} />
				<a class="image-link" href={imageModule.src} download={imageName}>↗</a>
				<div class="image-overlay">
					<slot name="image-overlay" />
				</div>
			</figure>
			<Text content={text} />
		</details>
	</li>
	:
	<li class="link-card" id={imageName}>
		<slot name="header" />
		<slot name="subheader" />
		<figure class="image-container">
			<Image class="image" src={imageModule} alt={text} />
			<a class="image-link" href={imageModule.src} target="_blank">↗</a>
			<div class="image-overlay">
				<slot name="image-overlay" />
			</div>
		</figure>
		<Text content={text} />
	</li>
}




<style>
	.link-card {
		list-style: none;
		display: flex;
		flex-direction: column;
		align-items: baseline;;

		padding: 1em;
		padding-inline: 2em;
		background-color: #23262d;
		background-image: none;
		background-size: 400%;
		border-radius: 7px;
		background-position: 100%;
		transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
		box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
	}

	.collapsible {
		padding-block: 0;
	}

	.collapsible :global(.text) {
		margin-bottom: 20px;
		max-width: 50.1ch;
		text-align: justify;
	}

	.collapsible.incomplete {
		pointer-events: none;
		background: #111;
		border: 1px dashed #666;
	}

	:global(:has(#show-letters:not(:checked))) .collapsible.incomplete {
		display: none;
	}

	.collapsible.incomplete summary {
		list-style: none;
	}

	@media (max-width: 600px) {
		.collapsible :global(.text) {
			font-size: 2.5vw;
		}
	}

	.image {
		max-width: 100%;
		height: auto;
		margin-bottom: 2em;
	}

	.image-container {
		position: relative;
		margin: 0;
	}

	.image-overlay {
		position: absolute;
		left: 10px;
		top: 10px;
		padding: 4px;
	}

	.image-link {
		position: absolute;
		right: 10px;
		top: 10px;
		padding: 4px;
		background-color: rgba(0, 0, 0, 0.5);
		border-radius: 5px;
		color: white;
		text-decoration: none;
	}

	details {
		margin-top: 0.25em;
	}

	@media (max-width: 500px) {

		.link-card {
			padding-top: 0;
			padding-inline: 1em;
		}
	}
</style>
