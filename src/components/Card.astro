---
import { Image } from 'astro:assets';
import { images } from '../helpers/images';

export interface Props {
	date: Date;
	text: string;
	clue: string;
	number: string;
}

const { text, date, clue, number } = Astro.props;

const image = images[`../images/${number}.png`] || images[`../images/${number}.jpg`];
if (!image) {
	throw new Error(`Image not found for clue ${number}`);
}

const formattedDate = new Intl.DateTimeFormat('en-GB', {
	day: '2-digit',
	month: 'long',
	year: 'numeric',
}).format(date);

interface TextPiece {
	type: "p" | "span" | "br";
	text: string;
}

let textPieces: TextPiece[] = [];
text.split('\n').forEach((line) => {
	const split = line.split(/([A-Z])\1{1}/);

	for (const piece of split) {
		if (piece.length === 1) {
			textPieces.push({
				type: "span",
				text: piece,
			});
		} else if (piece) {
			textPieces.push({
				type: "p",
				text: piece,
			});
		}
	}

	textPieces.push({
		type: "br",
		text: "",
	});
});

---

<li class="link-card" id={number}>
	<h2>{number}</h2>
	<header>
		<p class="date">ðŸ“† {formattedDate}</p>
		<p>-</p>
		<p class="clue-s">ðŸ§© <span class="clue">{clue}</span></span></p>
	</header>
	<Image class="image" src={image()} alt={text} />
	<div class="text">
		{textPieces.map((piece) => (
			piece.type === "p"
				? <p>{piece.text}</p>
				: piece.type === "br" 
					? <br />
					: <span class="double">{piece.text}{piece.text}</span>
		))}
	</div>
</li>
